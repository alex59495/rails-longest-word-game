<h1>New game</h1>

<ul>
<% @letters.each do |letter| %>
  <li class="letter"> <%= letter %> </li>
<% end %>
</ul>

<div class="question">What is the longest word you can find ?</div>
<form action="/score" method="post">
  <div class="input-group">
      <input type="text" class="form-control" name="word" id="word">
      <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Play</button>
      </span>
  </div>
  <input id="letters" name="letters" type="hidden" value="<%=@letters%>"/>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>